<html>
  <body>
    <h1> Password Validator</h1>
    <p> Password#1</p>
    <input type="text" id="pass1">
    <p> Password#2</p>
    <input type="text" id="pass2">
    
    <br></br>
    <button type="button" onclick="Validate()"> Validate </button>
    
    <script type="text/javascript">
    function Validate()
    {
    
        var x = document.getElementById("pass1").value;
        var y = document.getElementById("pass2").value;
        
        if((x.length < 8) || (y.length < 8))
        {
        alert("the passwords are not at least 8 characters long");
        }
        if(x != y)
        {
        alert("the passwords entered don't match");
        }
        else
        {
        alert("the passwords match");
        }
        
    }
    
    </script>
  </body>
</html>